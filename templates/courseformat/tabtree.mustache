{{!
    @template format_onetopic/courseformat/tabtree

    Tab tree.

    Example context (json):
    {
        "tabs": [{
            "active": "true",
            "inactive": "false",
            "link": [{
                "link": "http://moodle.org"
            }],
            "title": "Moodle.org",
            "text": "Moodle community",
            "styles": "color: #ff00ff"
        }]
    }
}}
<ul class="nav nav-tabs format_onetopic-tabs {{#hidetabsbar}}hiddentabsbar{{/hidetabsbar}}">
  {{#tabs}}
    <li class="nav-item {{specialclass}} {{#haschilds}}haschilds{{/haschilds}}" {{#id}}id="onetabid-{{.}}"{{/id}}>
      <a class="nav-link{{#active}} active{{/active}}{{#inactive}} disabled{{/inactive}}" {{#link}}href="{{{link}}}"{{/link}} title="{{title}}" style="{{styles}}">
        {{#haschilds}}{{#pix}} t/expandedchevron {{/pix}}{{/haschilds}}<span class="tabicon {{^icons}}hidden{{/icons}}">
          {{#icons}}
            <span class="tabicon-{{state}}{{^visible}} hidden{{/visible}}">{{{icon}}}</span>
          {{/icons}}
        </span>{{{text}}}

        {{#availablemessage}}
          <span class="iconhelp" data-infoid="format_onetopic_winfo_{{uniqueid}}">
            {{#pix}} e/help, core, {{#str}} info {{/str}} {{/pix}}
          </span>
          <div id="format_onetopic_winfo_{{uniqueid}}" class="availability_info_box" style="display: none;">
            {{{availablemessage}}}
          </div>
        {{/availablemessage}}
      </a>
    </li>
  {{/tabs}}
</ul>
