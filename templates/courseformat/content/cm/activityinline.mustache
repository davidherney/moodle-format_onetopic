{{!
    @template format_onetopic/courseformat/content/cm/activityinline

    Display the activity content of a cm.

    Example context (json):
    {
        "cmname": {
            "displayvalue" : "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Activity example</span></a>"
        },
        "hasname": "true",
        "afterlink": "<span class=\"badge badge-primary\">30 unread messages</span>",
        "hasextras": true,
        "extras": ["<span class=\"badge badge-secondary\">[extras]</span>"],
        "activityinfo": {
            "hasmodavailability": true,
            "activityname": "Activity example",
            "hascompletion": true,
            "uservisible": true,
            "hasdates": true,
            "isautomatic": true,
            "istrackeduser": true,
            "activitydates": [
                {
                    "label": "Opens:",
                    "datestring": "6 April 2021, 6:46 PM"
                }
            ],
            "completiondetails": [
                {
                    "statuscomplete": 1,
                    "description": "Viewed"
                },
                {
                    "statusincomplete": 1,
                    "description": "Receive a grade"
                }
            ]
        },
        "modstealth": true
    }
}}
<span class="activity-basis">
    {{^hasname}}
        {{$ core_courseformat/local/content/cm/badges }}
            {{> core_courseformat/local/content/cm/badges }}
        {{/ core_courseformat/local/content/cm/badges }}
    {{/hasname}}
    {{#cmname}}
        {{$ format_onetopic/courseformat/content/cm/cmnameinline }}
            {{> format_onetopic/courseformat/content/cm/cmnameinline }}
        {{/ format_onetopic/courseformat/content/cm/cmnameinline }}
    {{/cmname}}
    {{#afterlink}}
        <span class="afterlink">
            {{{afterlink}}}
        </span>
    {{/afterlink}}

    {{#showinlinehelp}}
        {{#activityinfo}}
            <span class="iconwithhelp">
                {{#pix}} e/help, core, {{#str}} info {{/str}} {{/pix}}
                <span class="hidden iconwithhelp-content" {{#singlename}}data-title="{{singlename}}"{{/singlename}}>

                    {{#hascompletion}}
                        {{#showcompletionconditions}}
                            <span class="activity-info mt-1 mt-md-0">
                                {{> format_onetopic/courseformat/content/cm/activity_infoinline}}
                            </span>
                        {{/showcompletionconditions}}
                    {{/hascompletion}}

                    <span class="description">
                        {{#hasdates}}
                        <span data-region="activity-dates" class="activity-dates small course-description-item">
                            <span class="description-inner">
                                {{#activitydates}}
                                    {{$core_course/activity_date}}
                                        {{>core_course/activity_date}}
                                    {{/core_course/activity_date}}
                                {{/activitydates}}
                            </span>
                        </span>
                        {{/hasdates}}

                        {{#altcontent}}
                            <span class="activity-altcontent {{#hasname}}course-description-item small{{/hasname}}{{^hasname}}contentwithoutlink{{/hasname}} d-flex">
                                <span class="flex-fill description-inner">
                                    <!--{{{altcontent}}}-->
                                </span>
                            </span>
                        {{/altcontent}}
                        {{#modavailability}}
                            {{$ format_onetopic/courseformat/content/cm/availabilityinline }}
                                {{> format_onetopic/courseformat/content/cm/availabilityinline }}
                            {{/ format_onetopic/courseformat/content/cm/availabilityinline }}
                        {{/modavailability}}
                    </span>

                </span>
            </span>
        {{/activityinfo}}
    {{/showinlinehelp}}
</span>
{{#hasname}}
    {{$ core_courseformat/local/content/cm/badges }}
        {{> core_courseformat/local/content/cm/badges }}
    {{/ core_courseformat/local/content/cm/badges }}
{{/hasname}}
