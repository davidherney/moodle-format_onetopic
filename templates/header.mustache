{{!
    @template format_onetopic/header

    Example context (json):
    {
        "uniqid": "course-1",
        "title": "Course 1",
        "initialsection": {
            "num": 0,
            "id": 34,
            "cmlist": {
                "cms": [
                    {
                        "cmitem": {
                            "cmformat": {
                                "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Forum example</span></a>",
                                "hasname": "true"
                            },
                            "cmid": 3,
                            "id": 3,
                            "anchor": "module-3",
                            "module": "forum",
                            "extraclasses": "newmessages"
                        }
                    }
                ],
                "hascms": true
            },
            "iscurrent": true,
            "summary": {
                "summarytext": "Summary text!"
            }
        },
        "hasformatmsgs": "true",
        "formatmsgs": [{
            "message": "This course uses the onetopic format."
        }],
        "format": "onetopic",
        "templatetopic": "true",
        "withicons": "true",
        "testing": true
    }
}}

<div id="{{uniqid}}-course-format">
    <h2 class="accesshide">{{{title}}}</h2>
    {{{completionhelp}}}

    {{#hasformatmsgs}}
        {{#formatmsgs}}
            {{>core/notification_info}}
        {{/formatmsgs}}
    {{/hasformatmsgs}}

    {{#initialsection}}
    <div class="single-section general-section">
        <ul class="{{format}}">
            {{$ format_onetopic/local/content/section }}
                {{> format_onetopic/local/content/section }}
            {{/ format_onetopic/local/content/section }}
        </ul>
    </div>
    {{/initialsection}}

    {{#hidetabsbar}}
    <div class="alert alert-warning">
        {{#str}} hiddentabsbar, format_onetopic {{/str}}
    </div>
    {{/hidetabsbar}}

    <div id="tabs-tree-start" class="{{tabsviewclass}} {{#hastopictabs}}hastopictabs{{/hastopictabs}} {{#hassecondrow}}hassecondrow{{/hassecondrow}}">
        {{#cssstyles}}
            <style type="text/css">
                {{{cssstyles}}}
            </style>
        {{/cssstyles}}

        {{#hastopictabs}}
            <div class="tabs-wrapper">

                {{{courseindex}}}

                {{^courseindex}}
                    {{>format_onetopic/courseformat/tabtree}}
                {{/courseindex}}
            </div>
        {{/hastopictabs}}

        <div class="onetopic-tab-body{{#tabsectionbackground}} onetopic-withsectionbg{{/tabsectionbackground}}"
            {{#activetab}}data-tabid="{{id}}"{{/activetab}}
            {{#tabsectionbackground}}style="{{tabsectionbackground}}"{{/tabsectionbackground}}>

            {{#hassecondrow}}
                {{#secondrow}}
                    {{>format_onetopic/courseformat/tabtree}}
                {{/secondrow}}
                <div class="onetopic-tab-body-secondrow{{#subtabsectionbackground}} onetopic-withsubsectionbg{{/subtabsectionbackground}}"
                    {{#subtabsectionbackground}}style="{{subtabsectionbackground}}"{{/subtabsectionbackground}}>
            {{/hassecondrow}}


            <div class="hack-element-not-used">{{! Used in order to break the div wraped in output.course_content_header }}

{{#testing}}
            {{#hassecondrow}}
                </div>
            {{/hassecondrow}}
            </div>
        {{! End of onetopic-tab-body box. }}
        </div>
    </div>
</div>
{{/testing}}

